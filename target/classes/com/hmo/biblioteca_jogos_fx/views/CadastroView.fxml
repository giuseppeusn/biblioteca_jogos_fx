<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hmo.biblioteca_jogos_fx.Cadastro"
      alignment="CENTER" spacing="20"
      prefWidth="900" prefHeight="700">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Cadastrar novo jogo" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <VBox spacing="15" alignment="CENTER" prefWidth="600">
        <VBox spacing="5">
            <Label text="Título:"/>
            <TextField fx:id="campoTitulo" prefWidth="600"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Gênero:"/>
            <TextField fx:id="campoGenero" prefWidth="600"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Ano de lançamento:"/>
            <TextField fx:id="campoAno" prefWidth="600"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Capa:"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Selecionar Imagem" onAction="#selecionarImagem"/>
            </HBox>
        </VBox>
    </VBox>

    <ImageView fx:id="previewImagem" fitWidth="200" fitHeight="250" preserveRatio="true"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Salvar" fx:id="btnSalvar" onAction="#salvarJogo" prefWidth="120"/>
        <Button text="Cancelar" fx:id="btnCancelar" onAction="#voltarTelaPrincipal" prefWidth="120"/>
    </HBox>
</VBox>
