<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hmo.biblioteca_jogos_fx.Cadastro"
      alignment="CENTER" spacing="10">
    <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Cadastrar Novo Jogo" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="campoTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Gênero:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="campoGenero" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Ano de Lançamento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="campoAno" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Capa:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <Button text="Selecionar Imagem" onAction="#selecionarImagem"/>
        </HBox>
    </GridPane>

    <ImageView fx:id="previewImagem" fitWidth="150" fitHeight="200" preserveRatio="true"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" fx:id="btnSalvar" onAction="#salvarJogo"/>
        <Button text="Cancelar" fx:id="btnCancelar" onAction="#voltarTelaPrincipal"/>
    </HBox>
</VBox>
