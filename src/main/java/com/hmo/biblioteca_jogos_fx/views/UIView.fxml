<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.hmo.biblioteca_jogos_fx.UIController"
      alignment="CENTER" spacing="15" prefWidth="900" prefHeight="700">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="campoBusca" promptText="Buscar jogo..." prefWidth="600"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ordenar por título" fx:id="btnOrdenarTitulo" onAction="#ordenarPorTitulo"/>
        <Button text="Ordenar por gênero" fx:id="btnOrdenarGenero" onAction="#ordenarPorGenero"/>
        <Button text="Ordenar por ano" fx:id="btnOrdenarAno" onAction="#ordenarPorAno"/>
        <Button text="Adicionar jogo" fx:id="btnAdicionar" onAction="#abrirTelaCadastro"/>
    </HBox>

    <ScrollPane fitToWidth="true" fitToHeight="true" prefWidth="850" prefHeight="550">
        <FlowPane fx:id="flowJogos" hgap="20" vgap="20" alignment="CENTER"/>
    </ScrollPane>
</VBox>
